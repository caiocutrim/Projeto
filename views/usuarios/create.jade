extends ../layout

block content
	h1 Cadastro de Usuários
	hr
	br
	if messages.erro
		div(class="alert alert-danger")
			each msg in messages.erro
				b= msg
				br
		br
	form(method="POST", action="/usuarios/create", role="form")
		div(class="form-group")
			label Nome Complemento
			input(type="text", class="form-control", name="nome", value="#{user.nome || ''}" placeholder="Nome Completo", autofocus, required)
		div(class="form-group")
			label CPF
			input(type="text", class="form-control", name="cpf", id="cpf", value="#{user.cpf || ''}" placeholder="000.000.000-00", required)
		div(class="form-group")
			label Telefone
			input(type="text", class="form-control", name="telefone", value="#{user.telefone || ''}" placeholder="(00) 0000-0000", required)
		div(class="form-group")
			label Cep
			input(type="text", class="form-control", name="cep", value="#{user.cep || ''}" placeholder="00000-000", id="cep", size="10", maxlength="9", required)
		div(class="form-group")
			label Endereço
			input(type="text", class="form-control", name="endereco", id="rua", value="#{user.endereco || ''}" placeholder="Rua/Avenida", required)
		div(class="form-group")
			label Número
			input(type="text", class="form-control", name="numero", value="#{user.numero || ''}" placeholder="000", required)
		div(class="form-group")
			label Complemento
			input(type="text", class="form-control", name="complemento", value="" placeholder="Apto. X ou Casa X")
		div(class="form-group")
			label Bairro
			input(type="text", class="form-control", name="bairro", id="bairro", value="#{user.bairro || ''}" placeholder="Bairro", required)
		div(class="form-group")
			label Cidade
			input(type="text", class="form-control", id="cidade", name="cidade", value="#{user.cidade || ''}" placeholder="Cidade", required)
		div(class="form-group")
			label Estado
			input(type="text", class="form-control", id="uf", name="uf", size="2", value="#{user.cidade || ''}" placeholder="RS", required)							
		div(class="form-group")
			label E-mail
			input(type="email", class="form-control", name="email", value="#{user.email || ''}" placeholder="E-mail", required)
		div(class="form-group")
			label Senha
			input(type="password", class="form-control", name="password", placeholder="Senha", required)
		div(class="form-group")
			label Confirmar Senha
			input(type="password", class="form-control", name="password_confirmar", placeholder="Confirmar Senha", required)
		button(type="submit", class="btn btn-success") Salvar
	br
	br
	a(href="/usuarios") Voltar

block scripts
	script(type="text/javascript").
		$(document).ready(function() {
			function limpa_formulário_cep() {
				$("#rua").val("");
				$("#bairro").val("");
				$("#cidade").val("");
				$("#uf").val("");
				$("#ibge").val("");
				}
			$("#cep").blur(function() {
				var cep = $(this).val().replace(/\D/g, '');
				if (cep != "") {
					var validacep = /^[0-9]{8}$/;
						if(validacep.test(cep)) {
							$("#rua").val("...")
							$("#bairro").val("...")
							$("#cidade").val("...")
							$("#uf").val("...")
							$("#ibge").val("...")
							$.getJSON("//viacep.com.br/ws/"+ cep +"/json/?callback=?", function(dados) {
								if (!("erro" in dados)) {
									$("#rua").val(dados.logradouro);
									$("#bairro").val(dados.bairro);
									$("#cidade").val(dados.localidade);
									$("#uf").val(dados.uf);
									$("#ibge").val(dados.ibge);
								} else {
									limpa_formulário_cep();
									alert("CEP não encontrado.");
								}
				});
			} //end if.
				else {
							limpa_formulário_cep();
							alert("Formato de CEP inválido.");
							}
			} //end if.
				else {
							limpa_formulário_cep();
							}
			});
		});
	script(src="/js/jquery.mask.min.js")
	script(type="text/javascript").
		$(function(){
			$('input[name="cep"]').mask('00000-000');
			$('input[name="cpf"]').mask('000.000.000-00');
			$('input[name="telefone"]').mask('(00) 0000-0000');
		});
